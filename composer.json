{
	"name": "kalnoy/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",

	"require": {
		"laravel/framework": "~4.1.18",
		"cartalyst/sentry": "~2.0",
		"anahkiasen/former": "~3.4",
		"intervention/image": "~1.5",
		"intervention/imagecache": "~0.5"
	},

    "require-dev": {
		"way/generators": "~1.1",
		"barryvdh/laravel-ide-helper": "~1.8",
		"fzaninotto/faker": "~1.3",
		"phpunit/phpunit": "~3.7.0",
		"itsgoingd/clockwork": "~1.4.3"
	},

	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/entities",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php",

			"cruddy/src/controllers",
            "cruddy/src/exceptions.php"
		],

		"psr-0": {
			"Kalnoy\\Cruddy": "cruddy/src/",
			"App": "app/lib/"
		},

        "files": [
            "cruddy/src/helpers.php"
        ]
	},

	"scripts": {
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],

		"post-update-cmd": [
			"php artisan ide-helper:generate",
			"php artisan optimize"
		],

		"post-create-cmd": [
			"php artisan ide-helper:generate",
			"php artisan optimize"
		]
	},

	"config": {
		"preferred-install": "dist"
	}
}
